{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "lib": ["es6"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "skipLibCheck": true,
    "baseUrl": "./",
    "outDir": "./dist/src"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
