{
  "name": "airkeeper",
  "license": "MIT",
  "version": "1.0.0",
  "description": "A tool to update a beacon server value on a time interval",
  "main": "./dist/src/start.js",
  "files": [
    "dist",
    "serverless.yml",
    "*.js"
  ],
  "scripts": {
    "build": "yarn clean && yarn compile:build",
    "clean": "rimraf -rf ./dist *.tgz",
    "compile": "tsc -p tsconfig.json",
    "compile:build": "tsc -p tsconfig-build.json",
    "lint": "yarn run prettier:check && yarn run lint:eslint",
    "lint:eslint": "eslint . --ext .js,.ts",
    "prettier:check": "prettier --check \"./**/*.{js,sol,ts,md,yml,json}\"",
    "prettier:write": "prettier --write \"./**/*.{js,sol,ts,md,yml,json}\" --ignore-unknown",
    "sls:config": "sls config credentials --provider aws --key $AWS_ACCESS_KEY_ID --secret $AWS_SECRET_ACCESS_KEY",
    "sls:deploy": "yarn build && sls deploy --region $REGION --stage $STAGE",
    "sls:remove": "sls remove --region $REGION --stage $STAGE",
    "sls:invoke:airkeeper": "sls invoke --function airkeeper-beacon-update",
    "sls:invoke-local:airkeeper": "yarn build && sls invoke local --function airkeeper-beacon-update",
    "sls:invoke:psp": "sls invoke --function psp-beacon-update",
    "sls:invoke-local:psp": "yarn build && sls invoke local --function psp-beacon-update",
    "test": "jest",
    "prepare": "husky install"
  },
  "dependencies": {
    "@api3/airnode-abi": "^0.4.0",
    "@api3/airnode-adapter": "^0.4.0",
    "@api3/airnode-node": "^0.4.0",
    "@api3/airnode-ois": "^0.4.0",
    "@api3/airnode-protocol": "^0.4.0",
    "dotenv-safe": "^8.2.0",
    "ethers": "^5.5.2",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/dotenv-safe": "^8.1.2",
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.177",
    "@types/node": "^17.0.18",
    "@types/serverless": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "eslint": "^8.8.0",
    "eslint-plugin-functional": "^4.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.3.3",
    "prettier": "2.5.1",
    "rimraf": "^3.0.2",
    "serverless": "^3.1.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "./**/*.{js,ts}": "yarn lint"
  }
}
